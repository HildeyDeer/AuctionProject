<Window x:Class="AuctionOwnerClient.OwnerAuctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AuctionOwnerClient"
        Title="Мои аукционы" Height="500" Width="700" Background="#1E1E1E"
        ResizeMode="CanResize" SizeToContent="Manual">
    <Window.Resources>
        <!-- Стиль кнопок -->
        <local:AuctionStatusConverter x:Key="AuctionStatusConverter"/>
        <local:AuctionStatusToStyleConverter x:Key="AuctionStatusToStyleConverter"/>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#005F9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GreenButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль заголовков -->
        <Style x:Key="BoldTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <!-- Стиль карточек -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.2" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <DockPanel LastChildFill="True">
            <TextBlock Text="Мои аукционы" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="10"/>

            <Button x:Name="RefreshButton" Content="Обновить" Click="RefreshButton_Click"
                    Margin="10" Style="{StaticResource RoundedButtonStyle}"/>
            <Button x:Name="AddAuctionButton" Content="Добавить аукцион" Click="AddAuction_Click"
                    Margin="10" Style="{StaticResource RoundedButtonStyle}"/>
        </DockPanel>

        <!-- Список аукционов -->
        <Border Grid.Row="1" Background="#2D2D2D" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="AuctionList" Background="#2D2D2D">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3A3A3A" CornerRadius="8" Padding="10" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="White" Width="200"/>
                                    <Button x:Name="AuctionActionButton"
                                        Content="{Binding Status, Converter={StaticResource AuctionStatusConverter}}"
                                        Click="AuctionActionButton_Click"
                                        Style="{Binding Status, Converter={StaticResource AuctionStatusToStyleConverter}}"
                                        Margin="10,0,0,0" Width="100"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
