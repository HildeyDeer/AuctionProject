<Window x:Class="AuctionOwnerClient.AddAuctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление аукциона" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название аукциона" Margin="5"/>
            <TextBox x:Name="AuctionNameBox" Width="300" Margin="5"/>

            <TextBlock Text="Описание аукциона" Margin="5"/>
            <TextBox x:Name="AuctionDescriptionBox" Width="300" Margin="5"/>

            <TextBlock Text="Начальная цена" Margin="5"/>
            <TextBox x:Name="AuctionStartPriceBox" Width="300" Margin="5"/>

            <TextBlock Text="Категория" Margin="5"/>
            <TextBox x:Name="AuctionCategoryBox" Width="300" Margin="5"/>

            <TextBlock Text="Время окончания (yyyy-MM-dd HH:mm:ss)" Margin="5"/>
            <TextBox x:Name="AuctionEndTimeBox" Width="300" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Добавить" Click="AddAuction_Click" Margin="5"/>
                <Button Content="Отмена" Click="Cancel_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
