<Window x:Class="AuctionOwnerClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход - Владелец аукциона" Height="300" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">

            <TextBlock Text="Логин" Margin="5"/>
            <TextBox x:Name="UsernameBox" Width="200" Margin="5"/>

            <TextBlock Text="Пароль" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5"/>

            <TextBlock Text="Ключ-разрешение" Margin="5"/>
            <TextBox x:Name="PermissionBox" Width="200" Margin="5"/>

            <Button Content="Войти как владелец" Click="OwnerLogin_Click" Width="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
