<Window x:Class="AuctionClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход - Пользователь" Height="343" Width="350" Background="#F7F7F7">
    <Grid Margin="0,0,0,5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >

            <!-- Заголовок -->
            <TextBlock Text="Добро пожаловать" FontSize="20" FontWeight="Bold" Margin="10" TextAlignment="Center" Foreground="#333333"/>

            <!-- Логин -->
            <TextBlock Text="Логин" FontSize="14" Foreground="#555555" Margin="5"/>
            <TextBox x:Name="UsernameBox" Width="200" Height="40" Margin="5" Padding="10,5" FontSize="16" BorderBrush="#B0BEC5" BorderThickness="1" Background="White" HorizontalAlignment="Center"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль" FontSize="14" Foreground="#555555" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="40" Margin="5" Padding="10,5" FontSize="16" BorderBrush="#B0BEC5" BorderThickness="1" Background="White" HorizontalAlignment="Center"/>

            <!-- Кнопка "Войти" -->
            <Button Content="Войти" Click="Login_Click" Width="200" Height="45" Margin="5" Background="#007ACC" Foreground="Black" FontSize="16" BorderBrush="#005A8C" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center"  />

            <!-- Кнопка "Регистрация" -->
            <Button Content="Регистрация" Click="Register_Click" Width="200" Height="45" Margin="5" Background="DarkGray" Foreground="Black" FontSize="16" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
