<Window x:Class="AuctionClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход - Пользователь" Height="343" Width="350" Background="#2E2E2E">
    <Window.Resources>
        <!-- Стиль для кнопок с округлыми углами и тенями -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#1F77B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Эффект при нажатии -->
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0F5B8F"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" Opacity="0.5" BlurRadius="10"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текста -->
        <Style x:Key="TextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#D0D0D0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <!-- Заголовок -->
            <TextBlock Text="Добро пожаловать" FontSize="20" FontWeight="Bold" Margin="10" TextAlignment="Center" Foreground="#FFFFFF"/>

            <!-- Логин -->
            <TextBlock Text="Логин" Style="{StaticResource TextStyle}" Margin="5"/>
            <TextBox x:Name="UsernameBox" Width="200" Height="40" Margin="5" Padding="10,5" FontSize="16" BorderBrush="#444444" BorderThickness="1" Background="#3A3A3A" HorizontalAlignment="Center" Foreground="White"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль" Style="{StaticResource TextStyle}" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="40" Margin="5" Padding="10,5" FontSize="16" BorderBrush="#444444" BorderThickness="1" Background="#3A3A3A" HorizontalAlignment="Center" Foreground="White"/>

            <!-- Кнопка "Войти" -->
            <Button Content="Войти" Click="Login_Click" Width="200" Height="45" Margin="5" Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>

            <!-- Кнопка "Регистрация" -->
            <Button Content="Регистрация" Click="Register_Click" Width="160" Height="43" Margin="5" Background="#4B4B4B" Foreground="White" FontSize="16" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Style="{StaticResource RoundedButtonStyle}"/>

        </StackPanel>
    </Grid>
</Window>
