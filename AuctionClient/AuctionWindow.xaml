<Window x:Class="AuctionClient.AuctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Аукционы" Height="400" Width="600" Background="#1E1E1E" ResizeMode="NoResize">
    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#005F9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Эффект при нажатии -->
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004B7D"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" Opacity="0.5" BlurRadius="10"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текста заголовков -->
        <Style x:Key="BoldTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <!-- Стиль для списка аукционов -->
        <Style x:Key="AuctionListItemStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#888888" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <!-- Верхняя панель -->
        <DockPanel LastChildFill="True">
            <Button x:Name="ProfileButton" Content="Профиль" Click="ProfileButton_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Padding="10" Margin="10"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </DockPanel>

        <StackPanel Margin="10" VerticalAlignment="Center">
            <!-- Заголовок и кнопка обновления -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Аукционы" Style="{StaticResource BoldTextStyle}" Margin="10,0"/>
                <Button x:Name="RefreshButton" Content="Обновить" Click="RefreshButton_Click" 
                        Margin="10,0,0,0" Padding="10,5" Background="#FF5722" Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>

            <!-- Список аукционов -->
            <ListBox x:Name="AuctionList" Height="200" SelectionChanged="AuctionList_SelectionChanged" ItemsSource="{Binding AuctionsList}" Margin="10" Background="#2D2D2D">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Style="{StaticResource AuctionListItemStyle}">
                            <TextBlock Text="{Binding Name}" Width="150" Foreground="White"/>
                            <TextBlock Text="Владелец: " FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding OwnerUsername}" Width="100" Foreground="LightGray"/>
                            <TextBlock Text="Мин. ставка: " FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding StartPrice}" Foreground="Green"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
