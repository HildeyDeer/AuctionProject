<Window x:Class="AuctionClient.AuctionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали аукциона" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Информация об аукционе" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <Image x:Name="AuctionImage" Width="200" Height="150" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Название:" FontWeight="Bold"/>
            <TextBlock x:Name="AuctionName" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Категория:" FontWeight="Bold"/>
            <TextBlock x:Name="AuctionCategory" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Логин владельца:" FontWeight="Bold"/>
            <TextBlock x:Name="AuctionOwner" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Минимальная ставка:" FontWeight="Bold"/>
            <TextBlock x:Name="AuctionPrice" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Описание:" FontWeight="Bold"/>
            <ScrollViewer Height="80">
                <TextBlock x:Name="AuctionDescription" TextWrapping="Wrap"/>
            </ScrollViewer>

            <Button Content="Участвовать" Click="JoinAuction_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
