<Window x:Class="AuctionClient.AuctionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали аукциона" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название:" FontWeight="Bold"/>
            <TextBlock x:Name="AuctionNameText" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Владелец:" FontWeight="Bold"/>
            <TextBlock x:Name="OwnerText" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Стартовая цена:" FontWeight="Bold"/>
            <TextBlock x:Name="StartPriceText" FontSize="14" Margin="0,0,0,10"/>

            <Button Content="Участвовать" Click="JoinAuction_Click" HorizontalAlignment="Center" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
