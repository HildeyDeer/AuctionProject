<Window x:Class="AuctionClient.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор роли" Height="250" Width="350" Background="#F9F9F9">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Заголовок -->
            <TextBlock Text="Выберите способ входа" FontSize="18" FontWeight="Bold" Margin="10" TextAlignment="Center" Foreground="#333333"/>

            <!-- Кнопка "Войти как пользователь" -->
            <Button Content="Войти как пользователь" 
                    Click="OpenUserLogin" 
                    Width="250" 
                    Height="40" 
                    Margin="5"
                    Background="#007ACC"
                    Foreground="Black"
                    BorderBrush="#005A8C"
                    BorderThickness="1"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />

            <!-- Кнопка "Войти как владелец аукциона" -->
            <Button Content="Войти как владелец аукциона" 
                    Click="OpenOwnerLogin" 
                    Width="250" 
                    Height="40" 
                    Margin="5"
                    Background="DarkGray"
                    Foreground="Black"
                    BorderBrush="Black"
                    BorderThickness="1"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />
        </StackPanel>
    </Grid>
</Window>
